<header class="page-header">
  <h1>Dashboard</h1>
</header>

<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th style="width: 50%">Database Entry</th>
        <th style="width: 50%">Count</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to 'Categories', admin_categories_path %></td>
        <td><%= @categories_count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Products', admin_products_path %></td>
        <td><%= @products_count %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th style="width: 50%">Category</th>
        <th style="width: 50%">Count</th>
      </tr>
    </thead>
    <tbody>
      <% @products_per_category.each do |category| %>
        <tr>
          <td><%= link_to "#{category[:name]}", "categories/#{category[:id]}" %></td>
          <td><%= category[:count] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 

